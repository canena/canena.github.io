---
import PostPreview from "./PostPreview.astro";
const { right = false, post, title, background = "" } = Astro.props;

const billboard = post.data.billboard ?? "diagonal";
---

<div (box) (center) (billboard)={`${right ? 'right' : 'left'} ${billboard}`} class="bg-lightgray bg-cover rounded drop-shadow border-white border-8">
    <slot name="heading"></slot>

    <div (box) class="bg-default rounded">
        <PostPreview post={post} background={background} />

        <h4>{title}</h4>

        <slot />
    </div>

</div>
